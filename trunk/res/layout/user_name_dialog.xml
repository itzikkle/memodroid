<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView
		android:id="@+id/userNameDialogDescription"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:paddingBottom="20dp" />

	<LinearLayout
		android:id="@+id/char_picker_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/userNameDialogDescription"
		android:paddingBottom="20dp">
		<it.erkatta.memodroid.ui.customviews.CharPickerView
			android:id="@+id/username_first_char"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<it.erkatta.memodroid.ui.customviews.CharPickerView
			android:id="@+id/username_second_char"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<it.erkatta.memodroid.ui.customviews.CharPickerView
			android:id="@+id/username_third_char"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<Button
		android:id="@+id/buttonConfirmUsername"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/username_dialog_button_confirm_username"
		android:layout_below="@id/char_picker_container" />
</RelativeLayout>
