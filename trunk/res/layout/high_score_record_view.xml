<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/positionTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="1"
		android:textSize="30dp"
		android:textStyle="bold"
		android:paddingRight="10dp"
		android:paddingLeft="10dp"
		android:layout_alignParentLeft="true" />
	<TextView
		android:id="@+id/movesTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/win_dialog_moves"
		android:textSize="10dp"
		android:layout_marginTop="4dp"
		android:paddingRight="4dp"
		android:layout_toRightOf="@id/positionTextView"
		android:layout_alignTop="@id/positionTextView" />
	<TextView
		android:id="@+id/movesValueTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="10"
		android:textSize="10dp"
		android:textStyle="bold"
		android:layout_marginTop="4dp"
		android:layout_toRightOf="@id/movesTextView"
		android:layout_alignTop="@id/positionTextView" />
	<TextView
		android:id="@+id/timeTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/win_dialog_time"
		android:textSize="10dp"
		android:layout_marginBottom="4dp"
		android:paddingRight="4dp"
		android:layout_toRightOf="@id/positionTextView"
		android:layout_alignBottom="@id/positionTextView" />
	<TextView
		android:id="@+id/timeValueTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="00:50"
		android:textSize="10dp"
		android:textStyle="bold"
		android:layout_marginBottom="4dp"
		android:layout_toRightOf="@id/timeTextView"
		android:layout_alignBottom="@id/positionTextView" />

	<TextView
		android:id="@+id/difficultyLevelTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="DIFFICULTY LEVEL:"
		android:textSize="10dp"
		android:layout_marginTop="4dp"
		android:paddingLeft="14dp"
		android:paddingRight="4dp"
		android:layout_toRightOf="@id/movesValueTextView"
		android:layout_alignTop="@id/positionTextView" />
	<TextView
		android:id="@+id/difficultyLevelValueTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Hard"
		android:textSize="10dp"
		android:textStyle="bold"
		android:layout_marginTop="4dp"
		android:layout_toRightOf="@id/difficultyLevelTextView"
		android:layout_alignTop="@id/positionTextView" />
	<TextView
		android:id="@+id/themeTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="THEME:"
		android:textSize="10dp"
		android:layout_marginBottom="4dp"
		android:paddingLeft="10dp"
		android:paddingRight="4dp"
		android:layout_toRightOf="@id/timeValueTextView"
		android:layout_alignBottom="@id/positionTextView" />
	<TextView
		android:id="@+id/themeValueTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Classic"
		android:textSize="10dp"
		android:textStyle="bold"
		android:layout_marginBottom="4dp"
		android:layout_toRightOf="@id/themeTextView"
		android:layout_alignBottom="@id/positionTextView" />

	<TextView
		android:id="@+id/playerNameTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="30dp"
		android:textStyle="bold"
		android:paddingRight="10dp"
		android:layout_alignParentRight="true" />

	<TextView
		android:id="@+id/lineContainer"
		android:layout_height="4dp"
		android:layout_width="fill_parent"
		android:background="@drawable/line"
		android:paddingBottom="2dp"
		android:layout_alignBottom="@id/positionTextView" />

</RelativeLayout>
